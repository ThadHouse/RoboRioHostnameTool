<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:RoboRioHostnameTool.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
        MinWidth="600" MinHeight="400"
        MaxWidth="600" MaxHeight="400"
        Width="600" Height="400"
        x:Class="RoboRioHostnameTool.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="RoboRioHostnameTool">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

  <Grid ColumnDefinitions="75*,25*">
    <ListBox Grid.Column="0" 
             HorizontalAlignment="Stretch" 
             VerticalAlignment="Stretch" 
             Items="{Binding Devices}" 
             SelectedItem="{Binding SelectedDevice}">
      
    </ListBox>
    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
      <Button HorizontalAlignment="Center" Content="{Binding StartText}" IsEnabled="{Binding CanSearch}" Command="{Binding OnSearch}"></Button>
      <Button HorizontalAlignment="Center" IsEnabled="{Binding CanBlink}" Command="{Binding OnBlinkLed}">Blink Radio LED</Button>
    </StackPanel>
  </Grid>


</Window>
